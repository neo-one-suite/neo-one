{
  "name": "neo-one",
  "version": "0.0.2",
  "description": "NEOâ€¢ONE is a suite of tools and frameworks for developing dapps on the NEO blockchain.",
  "repository": "https://github.com/neo-one-suite/neo-one",
  "bugs": "https://github.com/neo-one-suite/neo-one/issues",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=8.9.0"
  },
  "lint-staged": {
    "packages/*/src/**/*.js": [
      "prettier --write --config .prettierrc",
      "git add",
      "eslint",
      "yarn test --findRelatedTests"
    ],
    "scripts/**/*.js": [
      "prettier --write --config .prettierrc",
      "git add",
      "eslint"
    ]
  },
  "scripts": {
    "flow": "flow",
    "lint-staged": "lint-staged",
    "flow:coverage": "flow-coverage-report -i 'packages/*/src/**/*.js' -t html",
    "precommit": "lint-staged && flow",
    "bootstrap": "yarn run build && lerna bootstrap",
    "build": "rm -rf ./packages/*/dist && gulp build",
    "watch": "gulp watch",
    "publish": "yarn run build && lerna publish",
    "pretest-coverage": "babel-node ./scripts/test/pretest.js",
    "posttest-coverage": "babel-node ./scripts/test/posttest.js",
    "test": "jest",
    "test-coverage": "yarn test --coverage",
    "nit:source": "prettier --config .prettierrc --list-different \"packages/*/src/**/*.js\"",
    "nit:scripts": "prettier --config .prettierrc --list-different \"scripts/**/*.js\"",
    "nit": "yarn nit:source && yarn nit:scripts",
    "lint:source": "eslint packages/*/src/**",
    "lint:scripts": "eslint scripts/**",
    "lint": "yarn lint:source && yarn lint:scripts"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.35",
    "@babel/core": "^7.0.0-beta.35",
    "@babel/node": "^7.0.0-beta.35",
    "@babel/plugin-proposal-async-generator-functions": "^7.0.0-beta.35",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.35",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.35",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0-beta.35",
    "@babel/polyfill": "^7.0.0-beta.35",
    "@babel/preset-env": "^7.0.0-beta.35",
    "@babel/register": "^7.0.0-beta.35",
    "babel-core": "^7.0.0-0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "eslint": "^4.13.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.61.0",
    "fs-extra": "^5.0.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-newer": "^1.3.0",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.8",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "rollup": "^0.52.2",
    "rollup-plugin-babel": "4.0.0-beta.0",
    "rollup-plugin-json": "^2.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "through2": "^2.0.3"
  },
  "resolutions": {
    "bn.js": "^4.11.8"
  },
  "jest": {
    "collectCoverageFrom": [
      "packages/*/src/**/*.js",
      "!**/bin/**",
      "!**/__mocks__/**",
      "!**/__tests__/**",
      "!**/__data__/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/packages/neo-one-core/src/utils/AsyncIteratorBase.flow.js"
    ],
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/packages/neo-one-neo-settings/src/test.js"
    ],
    "snapshotSerializers": [
      "./scripts/serializers/blockchain.js",
      "./scripts/serializers/bn.js",
      "./scripts/serializers/buffer.js"
    ],
    "setupTestFrameworkScriptFile": "./scripts/test/jestSetup.js"
  }
}
