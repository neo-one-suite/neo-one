{
  "compilerOptions": {
    "baseUrl": "./packages",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",

    "lib": ["dom", "es5", "esnext"],
    "paths": {
      "@neo-one/ec-key": [
        "../@types/@neo-one/ec-key"
      ],
      "@neo-one/boa": [
        "../@types/@neo-one/boa"
      ],
      "@neo-one/csharp": [
        "../@types/@neo-one/csharp"
      ],
      "@neo-one/*": [
        "./neo-one-*/src"
      ],
      "*": [
        "../@types/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types/",
      "./@types/roots"
    ],

    "pretty": true,

    "noEmit": true,
    "declaration": false,

    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "experimentalDecorators": true,

    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "allowUnusedLabels": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "dist",
    "packages/neo-one-server-plugin-wallet/src/contracts/*.ts",
    "packages/neo-one-smart-contract/src/*.ts",
    "packages/neo-one-smart-contract-lib/src/*.ts",
    "packages/*/src/__data__/contracts/*.ts"
  ]
}
