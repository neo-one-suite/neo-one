{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./packages",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@neo-one/ec-key": [
        "../@types/@neo-one/ec-key"
      ],
      "@neo-one/*": [
        "./neo-one-*/src"
      ],
      "*": [
        "../@types/*"
      ]
    },
    "plugins": [
      {
        "name": "tslint-language-service",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": true,
        "disableNoUnusedVariableRule": true,
        "supressWhileTypeErrorsPresent": false
      }
    ],
    "pretty": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./packages/neo-one-smart-contract",
      "./@types/roots"
    ]
  }
}
